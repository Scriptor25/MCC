namespace example

define :add(x, y) #:math {
    %result = %x + %y;
    tellraw(@s, `${%x} + ${%y} = ${%result}`);
    return %result;
}

define :sub(x, y) #:math {
    %result = %x - %y;
    tellraw(@s, `${%x} - ${%y} = ${%result}`);
    return %result;
}

