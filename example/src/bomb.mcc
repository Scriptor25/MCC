include "std.mcc"

namespace example

define pos(): position {
    return ref<position>(entity, "@s", "Pos")
}

define on_ground(): boolean {
    return ref<boolean>(entity, "@s", "OnGround")
}

define spawn_tnt() {
    std:summon(pos(), "minecraft:tnt")
}

define bomb() {
    unless (on_ground())
        spawn_tnt()
}
