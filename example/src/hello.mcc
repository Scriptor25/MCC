namespace example

define :hello() {
    ;tellraw @s [ "Hello ", { "selector": "@s", "color": "gold" }, "!" ];
}

define :hello_all() {
    print(@s, `Hello ${@s}! Hello to all of ${@e[ type = !player ]}!`)
}

define :hello_rec(d) {
    print(@s, `Hello ${d}`)
    args = { d: d - 1 }
    if (d <= 0)
        print(@s, "reached end of recursive loop")
    else
        $:hello_rec(args)
}
