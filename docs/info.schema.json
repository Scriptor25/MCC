{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mcc.de/info.schema.json",
  "title": "Info",
  "description": "package information for describing a mcc project",
  "type": "object",
  "properties": {
    "name": {
      "description": "datapack name",
      "type": "string"
    },
    "description": {
      "description": "datapack description",
      "type": "string|object|array",
      "items": {
        "type": "string|object|array",
        "properties": {
          "text": {
            "description": "some text",
            "type": "string"
          },
          "color": {
            "description": "the text color",
            "type": "string"
          }
        }
      }
    },
    "version": {
      "description": "minecraft datapack version",
      "type": "integer"
    }
  }
}